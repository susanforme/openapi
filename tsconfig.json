{
  // "include": [
  //   "src",
  //   "/test/**/*",
  //   "./rollup.config.ts",
  //   // 必须包含rollup.config.ts，否则rollup打包时会报错
  // ],
  "exclude": [
    "node_modules",
    "package.json",
    "dist"
  ],
  "files": [
    "src/index.ts",
    "rollup.config.ts",
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule":true
  },
}